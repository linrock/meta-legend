<div class="forum-post forum-post-preview">
  <a href="<%= forum_post_path(forum_post.id) %>">
    <header>
      <h3 class="title"><%= forum_post.title %></h3>
    </header>

    <footer>
      <h4 class="author">by <%= forum_post.user.forum_name %></h4>
      <div class="separator">&bull;</div>
      <div class="timestamp">
        <%= time_ago_in_words(forum_post.created_at).gsub(/about/, '').strip %> ago
      </div>
      <% if forum_post.forum_comments_count > 0%>
        <div class="separator">&bull;</div>
        <div class="comments-count">
          <%= forum_post.forum_comments_count %> comments
        </div>
      <% end %>
    </footer>
  </a>
</div>
