<script id="replay-data" data-card-id="<%= @card[:id] %>" type="application/json">
  <%= @replay_data.html_safe %>
</script>

<section class="card-replays">
  <div class="container">
    <h2>Recent legend replays that contain <%= @card[:name] %></h2>
    <div class="card-replays-list"></div>
  </div>

  <div class="card-info" style="display: none">
    <img src="https://art.hearthstonejson.com/v1/render/latest/enUS/256x/<%= @card[:id] %>.png"
         alt="<%= @card[:name] %>"/>
  </div>
</section>
